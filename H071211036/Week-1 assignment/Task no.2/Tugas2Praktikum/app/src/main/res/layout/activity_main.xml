<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#f2f2f2"
        android:measureWithLargestChild="true"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="344dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="130dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/rectangle"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="31dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/loftus"
                android:text="Pilih bangun ruang :"
                android:textColor="#121e1c"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/bangun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:backgroundTint="#121e1c"
                android:fontFamily="@font/loftus"
                android:textColor="#121e1c" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="341dp"
            android:layout_height="470dp"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/table"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="82dp"
                android:layout_height="391dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="95dp"
                    android:src="@drawable/geoicon" />

                <TextView
                    android:id="@+id/textView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/loftus"
                    android:text="Rara!"
                    android:textColor="#f6ee27"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Isra Nirwana (H071211036) Program Studi Sistem Informasi Praktikum Pemrograman Mobile D "
                    android:textColor="#4de753"
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/loftus"
                    android:text="Tugas 2"
                    android:textColor="#fe4ab7"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/inter_medium"
                    android:text="Bangun ruang adalah sebuah bangun 3 dimensi yang memiliki volume di dalamnya."
                    android:textAlignment="viewStart"
                    android:textColor="#a06cd1"
                    android:textSize="12sp" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="11dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:src="@drawable/geoline" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="179dp"
                android:layout_height="453dp"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/jari"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/loftus"
                    android:text="jari-jari"
                    android:textColor="#a06cd1"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit1"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#f6ee27"
                    android:inputType="numberDecimal"
                    android:textColor="#fe4ab7" />

                <TextView
                    android:id="@+id/panjang"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/loftus"
                    android:text="panjang"
                    android:textColor="#4de753"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit2"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#fe4ab7"
                    android:inputType="numberDecimal"
                    android:textColor="#f6ee27" />

                <TextView
                    android:id="@+id/lebar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/loftus"
                    android:text="lebar"
                    android:textColor="#f6ee27"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit3"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#4de753"
                    android:inputType="numberDecimal"
                    android:textColor="#a06cd1" />

                <TextView
                    android:id="@+id/tinggi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/loftus"
                    android:text="tinggi"
                    android:textColor="#fe4ab7"
                    android:textSize="16sp" />

                <EditText
                    android:id="@+id/edit4"
                    android:layout_width="190dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:backgroundTint="#a06cd1"
                    android:inputType="numberDecimal"
                    android:textColor="#4de753" />

                <Button
                    android:id="@+id/hitung"
                    android:layout_width="160dp"
                    android:layout_height="52dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="30dp"
                    android:backgroundTint="#fe4ab7"
                    android:fontFamily="@font/loftus"
                    android:text="Hitung"
                    android:textAllCaps="false"
                    android:textColor="#f6ee27"
                    app:cornerRadius="50dp"
                    app:strokeColor="#4de753"
                    app:strokeWidth="2dp" />

                <TextView
                    android:id="@+id/hasil"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/loftus"
                    android:text="Hasil"
                    android:textColor="#a06cd1"
                    android:textSize="25sp" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</ScrollView>